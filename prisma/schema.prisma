generator client {
  provider = "prisma-client"
  output   = "../src/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum QuestionType {
  SINGLE_CHOICE
  MULTIPLE_CHOICES
}

enum AgeRange {
  UNDER_18
  BETWEEN_18_30
  BETWEEN_31_50
  OVER_50
}

enum JobTitle {
  Developer
  Designer
  Tester
  Manager
  Director
  Analyst
  ProductManager
  Other
}

model User {
  id String @id @default(cuid())

  name          String
  firstName     String?
  lastName      String?
  email         String
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  role       String?
  banned     Boolean?  @default(false)
  banReason  String?
  banExpires DateTime?

  ageRange    AgeRange?
  companyName String?
  jobTitle    JobTitle?

  sessions Session[]
  accounts Account[]
  attempts UserAttempts[]

  @@unique([email])
  @@map("users")
}

model Session {
  id String @id @default(cuid())

  expiresAt      DateTime
  token          String
  ipAddress      String?
  userAgent      String?
  impersonatedBy String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("sessions")
}

model Account {
  id String @id @default(cuid())

  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Verification {
  id String @id @default(cuid())

  identifier String
  value      String
  expiresAt  DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Contest {
  id String @id @default(cuid())

  name                    String
  slug                    String        @unique
  theme                   String?
  description             String?
  active                  Boolean       @default(true)
  timeLimit               Int           @default(0)
  allowMultipleAttempts   Boolean       @default(false)
  requireCompletedProfile Boolean       @default(false)
  showFinalResults        Boolean       @default(false)
  showLeaderboard         Boolean       @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  questions Question[]
  attempts  UserAttempts[]

  @@map("contests")
}

model Question {
  id String @id @default(cuid())

  title   String
  content String
  type    QuestionType @default(SINGLE_CHOICE)
  order   Int          @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  contestId String
  contest   Contest @relation(fields: [contestId], references: [id], onDelete: Cascade)

  answers     Answer[]
  userAnswers UserAnswer[]

  @@map("questions")
}

model Answer {
  id String @id @default(cuid())

  content String
  score   Int    @default(0)
  order   Int    @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  userAnswers UserAnswer[]

  @@map("answers")
}

model UserAttempts {
  id String @id @default(cuid())

  score      Int      @default(0)
  startedAt  DateTime
  finishedAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  contestId String
  contest   Contest @relation(fields: [contestId], references: [id], onDelete: Cascade)

  userAnswers UserAnswer[]

  @@map("user_attempts")
}

model UserAnswer {
  id String @id @default(cuid())

  score Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  userAttemptId String
  userAttempt   UserAttempts @relation(fields: [userAttemptId], references: [id], onDelete: Cascade)

  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  answerId String
  answer   Answer @relation(fields: [answerId], references: [id], onDelete: Cascade)

  @@unique([userAttemptId, questionId, answerId])
  @@map("user_answers")
}
